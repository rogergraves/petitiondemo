<h1>Create a new Petition</h1>
<%= form_for @petition, :url => { :action => "create" } do |f| %>
	<% @petition.errors.full_messages.each do |msg| %>
		<%= msg %>
	<% end %>
	<%= f.hidden_field :user_id, @user_id %>
	<%= f.label :title, "Petition title:" %>
	<%= f.text_field :title %>
	<br/>
	<%= f.label :description, "Description:" %>
	<br/>
	<%= f.text_area :description, :size => "60x12" %>
	<br/>
	<%= f.submit "Create Petition"%>
<% end %>
